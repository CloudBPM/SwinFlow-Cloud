<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--CheckBox选中的颜色-->
    <style name="MyCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox" tools:targetApi="lollipop">
        <item name="android:colorControlActivated">@color/selectCheckBox</item>
        <item name="android:colorControlNormal">@color/normalCheckBox</item>
    </style>

    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>