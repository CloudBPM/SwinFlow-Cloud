<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.xq.myxuanqi.ui.activity.me.setting.SecuritySettingActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_10"
        android:id="@+id/tb">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@mipmap/arrow_left_000000"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:id="@+id/tb_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="安全设置"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/tb">
        <TextView
            android:id="@+id/tv_change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="#000"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/cl_change_pwd"
            app:layout_constraintLeft_toLeftOf="@id/cl_change_pwd"
            app:layout_constraintTop_toTopOf="@id/cl_change_pwd" />
        <ImageView
            android:id="@+id/ftv_icon_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/left1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_change_pwd"
            android:layout_marginRight="@dimen/dp_5"
            app:layout_constraintRight_toRightOf="@id/cl_change_pwd"
            app:layout_constraintTop_toTopOf="@id/tv_change_pwd" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_change_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/cl_change_pwd">
        <TextView
            android:id="@+id/tv_change_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="更换手机号"
            android:textColor="#000"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/cl_change_tel"
            app:layout_constraintLeft_toLeftOf="@id/cl_change_tel"
            app:layout_constraintTop_toTopOf="@id/cl_change_tel" />
        <ImageView
            android:id="@+id/ftv_icon_selected1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/left1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_change_tel"
            android:layout_marginRight="@dimen/dp_5"
            app:layout_constraintRight_toRightOf="@id/cl_change_tel"
            app:layout_constraintTop_toTopOf="@id/tv_change_tel" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_finger"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/cl_change_tel">
        <TextView
            android:id="@+id/tv_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="指纹登录"
            android:textColor="#000"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/cl_finger"
            app:layout_constraintLeft_toLeftOf="@id/cl_finger"
            app:layout_constraintTop_toTopOf="@id/cl_finger" />
        <ImageView
            android:id="@+id/ftv_icon_selected12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/left1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_finger"
            android:layout_marginRight="@dimen/dp_5"
            app:layout_constraintRight_toRightOf="@id/cl_finger"
            app:layout_constraintTop_toTopOf="@id/tv_finger" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
