<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    tools:context="com.xq.myxuanqi.ui.activity.me.setting.PermissionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        app:layout_constraintTop_toBottomOf="@id/tb"
        android:layout_marginTop="@dimen/dp_40">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/tv_problem"
                android:textSize="@dimen/sp_12"
                android:text="问题描述"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/dp_20"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintTop_toBottomOf="@id/tv_problem"
                android:id="@+id/cl_text_permission"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fff">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:id="@+id/et_problem"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ff000000"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="请输入遇到的问题或建议"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintTop_toBottomOf="@id/cl_text_permission"
                android:id="@+id/tv_iamge"
                android:textSize="@dimen/sp_12"
                android:text="添加图片"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/dp_20"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintTop_toBottomOf="@id/tv_iamge"
                android:background="#fff"
                android:id="@+id/cl_image">
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gv"
                    android:columnWidth="@dimen/dp_80"
                    android:horizontalSpacing="@dimen/dp_2"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"></GridView>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@id/cl_image"
                android:background="#fff"
                android:layout_marginTop="@dimen/dp_30"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/cl_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="您的称呼"
                    android:textColor="#ff000000"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/tv_name"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:background="@null"
                    android:id="@+id/et_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/sp_14"
                    android:hint="选填"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@id/cl_name"
                android:layout_marginTop="@dimen/dp_30"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fff"
                android:id="@+id/cl_tel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="联系方式"
                    android:textColor="#ff000000"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_tel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/tv_tel"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:background="@null"
                    android:id="@+id/et_tel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/sp_14"
                    android:hint="选填 便于我们联系您"/>
            </android.support.constraint.ConstraintLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@id/cl_tel"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/btn_login_normal_bg"
                android:id="@+id/btn_commit"
                android:textColor="#C3E9F2"
                android:textSize="@dimen/sp_14"
                android:text="提交"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/tb">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@mipmap/arrow_left_000000"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:id="@+id/tb_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="意见反馈"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>
