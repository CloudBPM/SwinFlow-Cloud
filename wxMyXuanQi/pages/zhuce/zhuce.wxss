/* pages/zhuce/zhuce.wxss */

.loginPic {
  margin: 10px 30px;
  text-align: center;
}

.img {
  width: 200rpx;
  height: 200rpx;
}

.inputList {
  font-size: 30rpx;
  padding: 0 30px;
}

.inputList view {
  position: relative;
  margin-bottom: 15px;
}

.inputList text {
  height: 40px;
  width: 20%;
  line-height: 40px;
  text-align-last: justify;
  position: absolute;
  top: 0;
}

.inputList input {
  display: inline-block;
  height: 40px;
  width: 70%;
  padding: 0 10px;
  margin-left: 23%;
  border: solid 1px #ddd;
}

.inputList .inputcode {
  width: 30%;
}

.inputList .getcode {
  width: 30%;
  position: absolute;
  right: 0;
  border: solid 1px #ddd;
  color: #777;
  text-align: center;
  text-align-last: auto;
}

.picker_view {
  display: inline-block;
  height: 40px;
  width: 70%;
  padding: 0 10px;
  margin-left: 23%;
  border: solid 1px #ddd;
}

.picker {
  background-color: #fff;
  font-size: 30rpx;
  padding-left: 10rpx;
}

.zhuceBtn {
  margin: 0 30px 0;
}

.zhuceBtn button {
  font-size: 36rpx;
  background: #3aa9ee;
  color: #fff;
  height: 90rpx;
  border-radius: 25px;
  margin-top: 40px;
}
